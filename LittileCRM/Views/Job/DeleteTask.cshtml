@model TaskModel
@{
    ViewData["Title"] = "DeleteTask";
}
<h2>Добавление сотрудника</h2>

<form asp-action="DeleteTask" asp-controller="Job" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.EmployeeId)
        @Html.HiddenFor(model => model.ComplexityId)
        <div class="form-group">
            <label asp-for="Name">Введите Имя</label>
            <input asp-for="Name" readonly="readonly" />
            <span asp-validation-for="Name" />
        </div>
        <div class="form-group">
            <label asp-for="Description">Введите Описание</label>
            <input asp-for="Description" readonly="readonly"  />
            <span asp-validation-for="Description" />
        </div>
        <div class="form-group">
            <label asp-for="StartDate">Введите Начало</label>
            <input asp-for="StartDate" readonly="readonly" />
            <span asp-validation-for="StartDate" />
        </div>
        <div class="form-group">
            <label asp-for="EndDate">Введите Конец</label>
            <input asp-for="EndDate" readonly="readonly"  />
            <span asp-validation-for="EndDate" />
        </div>
        <div class="form-group">
            <label asp-for="DonePercent">Введите завершенность</label>
            <input asp-for="DonePercent" readonly="readonly" />
            <span asp-validation-for="DonePercent" />
        </div>
        <div class="form-group">
            <label asp-for="EmployeedName">Введите завершенность</label>
            <input asp-for="EmployeedName" readonly="readonly" />
            <span asp-validation-for="EmployeedName" />
        </div>
        <div class="form-group">
            <label asp-for="EmployeedName">Введите завершенность</label>
            <input asp-for="EmployeedName" readonly="readonly" />
            <span asp-validation-for="EmployeedName" />
        </div>
        <div class="form-group">
            <input type="submit" value="Удалить" class="btn" />
        </div>
    </div>
</form>
