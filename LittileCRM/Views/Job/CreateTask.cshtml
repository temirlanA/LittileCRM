@model TaskModel
@{
    ViewData["Title"] = "CreateTask";
}
<h2>Добавление сотрудника</h2>

<form asp-action="CreateTask" asp-controller="Job" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="Name">Введите Имя</label>
            <input asp-for="Name" />
            <span asp-validation-for="Name" />
        </div>
        <div class="form-group">
            <label asp-for="Description">Введите Описание</label>
            <input asp-for="Description" />
            <span asp-validation-for="Description" />
        </div>
        <div class="form-group">
            <label asp-for="StartDate">Введите Начало</label>
            <input asp-for="StartDate" />
            <span asp-validation-for="StartDate" />
        </div>
        <div class="form-group">
            <label asp-for="EndDate">Введите Конец</label>
            <input asp-for="EndDate" />
            <span asp-validation-for="EndDate" />
        </div>
        <div class="form-group">
            <label asp-for="DonePercent">Введите завершенность</label>
            <input asp-for="DonePercent" />
            <span asp-validation-for="DonePercent" />
        </div>
        <div class="form-group">
            <label asp-for="EmployeeId">Введите работник</label>
            @Html.DropDownList("EmployeeId", (IEnumerable<SelectListItem>)ViewBag.Employee)
        </div>
        <div class="form-group">
            <label asp-for="ComplexityId">Введите Сложность</label>
            @Html.DropDownList("ComplexityId", (IEnumerable<SelectListItem>)ViewBag.Complexity)
        </div>
        <div class="form-group">
            <input type="submit" value="Создать" class="btn" />
        </div>
    </div>
</form>