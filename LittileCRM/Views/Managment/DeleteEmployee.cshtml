@model EmployeeModel
@{
    ViewData["Title"] = "DeleteEmployee";
}
<h2>Удаление сотрудника</h2>

<form asp-action="DeleteEmployee" asp-controller="Managment" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.PositionId)
        <div class="form-group">
            <label asp-for="LastName"> Фамилию</label>
            <input type="text" asp-for="LastName" readonly="readonly" />
            <span asp-validation-for="LastName" />
        </div>
        <div class="form-group">
            <label asp-for="Name"> Имя</label>
            <input asp-for="Name" readonly="readonly" />
            <span asp-validation-for="Name" />
        </div>
        <div class="form-group">
            <label asp-for="PositionName">Должность</label>
            <input asp-for="PositionName" readonly="readonly" />
            <span asp-validation-for="PositionName" />
        </div>
        <div class="form-group">
            <input type="submit" value="Удалить" class="btn" />
        </div>
    </div>
</form>