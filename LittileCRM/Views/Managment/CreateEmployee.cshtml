@model EmployeeModel
@{
    ViewData["Title"] = "CreateEmployee";
}
<h2>Добавление сотрудника</h2>

<form asp-action="CreateEmployee" asp-controller="Managment" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="LastName">Введите Фамилию</label>
            <input type="text" asp-for="LastName" />
            <span asp-validation-for="LastName" />
        </div>
        <div class="form-group">
            <label asp-for="Name">Введите Имя</label>
            <input asp-for="Name" />
            <span asp-validation-for="Name" />
        </div>
        <div class="form-group">
            <label asp-for="PositionId">Введите Должность</label>
            @Html.DropDownList("PositionId", (IEnumerable<SelectListItem>)ViewBag.Position)
        </div>
        <div class="form-group">
            <input type="submit" value="Создать" class="btn" />
        </div>
    </div>
</form>
